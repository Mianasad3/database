@model EquipmentRental.Models.Rental

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Customer
        </dt>
        <dd class = "col-sm-10">
            @Model.Customer.UserName
        </dd>
        <dt class = "col-sm-2">
            Equipment
        </dt>
        <dd class = "col-sm-10">
            @Model.Equipment.Name
        </dd>
        <dt class = "col-sm-2">
            Rental Hours
        </dt>
        <dd class = "col-sm-10">
            @Model.RentalHours
        </dd>
        <dt class = "col-sm-2">
           Is Current Rental
        </dt>
        <dd class = "col-sm-10">
             @{
                    if(Model.IsCurrentRental == 0)
                    {
                            <span>No</span>
                        }
                        else
                        {
                            <span>Yes</span>
                        }
                }   
        </dd>
        <dt class = "col-sm-2">
            Quantity
        </dt>
        <dd class = "col-sm-10">
            @Model.Quantity
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
